{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",        // ðŸ‘ˆ TODO parte de src
    "outDir": "dist",        // ðŸ‘ˆ TODO va a dist
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],          // ðŸ‘ˆ SOLO src
  "exclude": ["node_modules", "dist"]  // ðŸ‘ˆ no re-compile dist
}
